<script>
function clicked()
{

$('.faded').click(function()
 {
	if($("#" + this.id).hasClass("faded"))
	{
	$("#" + this.id).removeClass("faded");


	}
	else
	{
	$("#" + this.id).addClass("faded");



	}



});
}

$(document).ready(function() 
{
    $('#table').dataTable(
	{
	 "bLengthChange": false
	} );
} );
</script>

<?php
